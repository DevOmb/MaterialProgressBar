<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <com.devomb.materialprogressbar.MaterialProgressBar
        android:id="@+id/bar_1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        app:progress_mode="horizontal" />

    <com.devomb.materialprogressbar.MaterialProgressBar
        android:id="@+id/bar_2"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        app:progress_mode="vertical"
        />

    <com.devomb.materialprogressbar.MaterialProgressBar
        android:id="@+id/bar_3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight= "20dp"
        app:progress_mode="horizontal"
        app:background_color="@color/black"
        app:background_transparency="0.8"
        app:progress_color="@color/green" />

    <com.devomb.materialprogressbar.MaterialProgressBar
        android:id="@+id/bar_4"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="40dp"
        app:progress_mode="vertical"
        app:background_color="@color/black"
        app:background_transparency="0.2"
        app:progress_color="@color/blue"/>

</FrameLayout>
